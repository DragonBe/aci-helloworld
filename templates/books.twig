{% extends 'base.twig' %}

{% block pagetitle %}My book recommendation{% endblock %}

{% block booksactive %}<li><span class="active">My book recommendations</li>{% endblock %}

{% block content %}

    <div class="container">

        <h1 class="h1 azure-blue">{{ block('pagetitle') }}</h1>

        <div class="book-selection">

            {% for book in books %}

                <div class="media">

                    <div class="media-left">
                        <a href="{{ book.affiliate_link|escape }}" title="Buy this book on amazon.com" target="_blank" rel="nofollow">
                            <img src="{{ book.image|escape }}" width="150" alt="{{ book.title|escape }}">
                        </a>
                    </div>
                    <div class="media-body">
                        <a href="{{ book.affiliate_link|escape }}" title="Buy this book on amazon.com" target="_blank" rel="nofollow"><h3 class="h3 media-heading azure-blue">{{ book.title|escape }}</h3></a>
                        <p><strong>Author(s):</strong> {{ book.authors|escape }}</p>
                        <p>{{ book.abstract|escape|nl2br }}</p>
                        <p><a href="{{ book.affiliate_link|escape }}" class="btn btn-info" title="Buy this book on amazon.com" target="_blank" rel="nofollow">Buy now on amazon.com</a></p>
                    </div>

                </div>

                <hr>

            {% endfor %}


        </div>

    </div>

{% endblock %}